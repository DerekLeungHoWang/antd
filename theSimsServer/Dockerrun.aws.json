{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "mysql",
      "image": "mysql:5.7",
      "environment": [
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "PASS"
        },
        {
          "name": "MYSQL_USER",
          "value": "DEREK"
        },
        {
          "name": "MYSQL_PASSWORD",
          "value": "PASS"
        },
        {
          "name": "MYSQL_DATABASE",
          "value": "thesims"
        }        
      ],
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 3306,
          "containerPort": 3306
        }
      ]
    },
    {
      "name": "todo-rest-api",
      "image": "poiuz88i/testjpa:1.0.0-RELEASE",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 5000
        }
      ],
      "links": [
        "mysql"
      ]
    }
  ]
}